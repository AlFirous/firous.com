---
// obtain release version (https://ryan-schachte.com/blog/including_version_data/)
import {version} from "../../package.json";
// obtain build date (claude)
const response = await fetch('https://api.github.com/repos/alfirous/firous.com/commits?per_page=1');
const data = await response.json();
const commit = data[0].commit;

const date = new Date(commit.author.date);
const commitDate = date.toLocaleDateString('en-US', { 
  month: 'short', 
  year: 'numeric' 
});
---

<footer>
    <p>Perpetual Development <a href="https://github.com/AlFirous/firous.com" class="version">v{version} ({commitDate})</a></p>
    <nav>
        <a href="/quotes">Quotes</a>, <a href="/pages">Pages</a>.
    </nav>        
</footer>